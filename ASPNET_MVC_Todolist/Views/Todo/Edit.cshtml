@model AspNetCoreTodo.Models.TodoItem

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateItem" method="POST">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StartFrom" class="control-label"></label>
                <input type="Date" asp-for="StartFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DueAt" class="control-label"></label>
                <input type="Date" asp-for="DueAt" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="save-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
